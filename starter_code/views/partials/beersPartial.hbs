<div class="beer__card">
  <img class="beer__card__image" src="{{this.image_url}}" alt="{{this.name}}">
  <div class="beer__card__body">
    <h5 class="beer__card__body__name">{{this.name}}</h5>
    <h6 class="beer__card__body__tagline">{{this.tagline}}</h6>
    <p class="beer__card__body__desc">{{this.description}}</p>
  </div>
</div>